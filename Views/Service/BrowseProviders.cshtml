@model HoldPlease.Models.Service

@{
    ViewData["Title"] = "Browse Available Providers";
}

<h2>@ViewData["Title"]</h2>


<div>
    <hr/>
    <div class="row">
        @foreach (var item in ViewBag.matchingUsers)
        {
            <div class="col-md-6">
                <dl class="service-provider-card">
                    <dt>
                        <h4><strong>Name:</strong> @item.GetName()</h4>
                        <h4><strong>Hourly Rate: </strong>$ @item.GetPayPerHour() / hour</h4>
                        <h4><strong>Start: </strong>@Html.DisplayFor(model => model.startAt)</h4>
                        <h4><strong>End: </strong>@Html.DisplayFor(model => model.endAt)</h4>
                        <a href="#">Request</a>
                    </dt>
                </dl>
            </div>
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
</div>
