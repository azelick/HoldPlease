@model HoldPlease.Models.ApplicationUser
@{
    ViewData["Title"] = "Change Your Schedule";
}

<h2>@ViewData["Title"]</h2>
<hr />
<form asp-controller="Manage" asp-action="ChangeSchedule" method="post">
    <h4>Spot Holding Availability</h2>
    <div class="form-group">
        <label for="start">Start</label>
        <input name="start" class="form-control" type="time" value="@ViewData["start"]"/>
    </div>
    <div class="form-group">
        <label for="end">End</label>
        <input name="end" class="form-control" type="time" value="@ViewData["end"]"/>
    </div>
    <div class="form-group">
        <label for="pay-per-hour">Pay per Hour</label>
        <div class="input-group">
            <span class="input-group-addon">$</span>
            <input name="payPerHour" class="form-control" type="number" min="0.01" step="0.01" max="2500" placeholder="11.00" value="@ViewData["payPerHour"]"/>
        </div>
    </div>
    
    <button type="submit" class="btn btn-default">Change</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
